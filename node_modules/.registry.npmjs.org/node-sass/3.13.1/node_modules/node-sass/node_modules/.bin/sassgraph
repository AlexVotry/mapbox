#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  NODE_PATH="/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/bin/sassgraph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/bin/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/node_modules:/home/alex/projects/mapbox/node_modules:/home/alex/projects/node_modules:/home/alex/node_modules:/home/node_modules:/node_modules" "$basedir/node"  "$basedir/../../../../../../sass-graph/2.2.4/node_modules/sass-graph/bin/sassgraph" "$@"
  ret=$?
else 
  NODE_PATH="/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/bin/sassgraph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/bin/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules/sass-graph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/2.2.4/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/sass-graph/node_modules:/home/alex/projects/mapbox/node_modules/.registry.npmjs.org/node_modules:/home/alex/projects/mapbox/node_modules:/home/alex/projects/node_modules:/home/alex/node_modules:/home/node_modules:/node_modules" node  "$basedir/../../../../../../sass-graph/2.2.4/node_modules/sass-graph/bin/sassgraph" "$@"
  ret=$?
fi
exit $ret
